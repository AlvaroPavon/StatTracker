{
    "name": "alvaropavon/stat-tracker",
    "description": "Una aplicación para monitorizar métricas físicas con seguridad avanzada.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Alvaro Pavon",
            "email": "tu_email@example.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse src/ --level=5",
        "security-check": "composer audit"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
